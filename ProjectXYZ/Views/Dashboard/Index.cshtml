
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Dashboard</title>
    <style>
        .breadcrumb-item + .nav-item::before {
            content: ">";
        }

        .box {
            width: 10%;
            display: inline;
            text-align: center;
            color: white;
        }

        .small-box.text-center{
            box-shadow: 0 0 0;
        }

        .select2 {
            font-family: 'FontAwesome'
        }

        .select2-container .select2-selection--single {
            height: calc(2.25rem + 2px) !important;
        }

        .select2-container--default .select2-selection--single .select2-selection__rendered {
            line-height: 28px;
        }

        .select2-container--default .select2-selection--single .select2-selection__arrow {
            top: 8px;
        }
    </style>
</head>
<body>
    <section class="content">
        <div class="card container-fluid posDash" style="background: none; box-shadow: none !important;">
            <div class="card-body">
                <div class="col-lg-10 col-md-10 col-12 p-0 row m-0">
                    <div class="col-lg-4 col-md-12 col-12 pl-0">
                        @*<button class="btn btn-default"><i class="fa fa-chevron-left"></i></button>
            <div id="reportrange" style="background: #fff; cursor: pointer; padding: 5px 10px; border: 1px solid #ccc; justify-content: center; width: 65%;">
                <i class="far fa-calendar-alt"></i>&nbsp;
                <span></span> <i class="fa fa-caret-down text-right" style="float: right;"></i>
            </div>
            <button class="btn btn-default"><i class="fa fa-chevron-right"></i></button>*@
                        <div id="reportrange" class="w-100 text-center" style="background: #fff; cursor: pointer; padding: 6px 10px; border: 1px solid #ccc;">
                            <i class="far fa-calendar-alt" style="float: left; padding-top: 4px;"></i>&nbsp;
                            <span></span> @*<i class="fa fa-caret-down" style="float: right;"></i>*@
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6 pl-0 pt-lg-0 pt-md-1 pt-2">
                        <select class="form-control select2" id="times"></select>
                    </div>
                    <div class="col-lg-4 col-md-6 pl-0 pt-lg-0 pt-md-1 pt-2">
                        <select class="form-control select2" id="employees"></select>
                    </div>
                </div>
            </div>
            <div class="card-body col-lg-10 col-md-10 col-12">
                <div class="card">
                    <div class="card-header border-0 ui-sortable-handle">
                        <div class="row">
                            <div class="col-lg-3 col-md-4 col-6">
                                <div class="small-box text-center">
                                    <div class="inner">
                                        <p>Gross Sales</p>
                                        <h2>Rp18.000</h2>
                                    </div>
                                    @*<div class="icon">
                                <i class="ion ion-bag"></i>
                            </div>*@
                                    @*<a href="#" class="text-green">More info <i class="fas fa-arrow-circle-right"></i></a>*@
                                    <a href="#" class="text-green">+Rp18.000 (+100%)</a>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-4 col-6">
                                <div class="small-box text-center">
                                    <div class="inner">
                                        <p>Refunds</p>
                                        <h2>Rp0</h2>
                                    </div>
                                    <a href="#" class="text-green">+Rp0 (0%)</a>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-4 col-6">
                                <div class="small-box text-center">
                                    <div class="inner">
                                        <p>Dicounts</p>
                                        <h2>Rp0</h2>
                                    </div>
                                    <a href="#" class="text-green">+Rp0 (0%)</a>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-4 col-6">
                                <div class="small-box text-center">
                                    <div class="inner">
                                        <p>Net Sales</p>
                                        <h2>Rp18.000</h2>
                                    </div>
                                    <a href="#" class="text-green">+Rp18.000 (+100%)</a>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-4 col-6">
                                <div class="small-box text-center">
                                    <div class="inner">
                                        <p>Gross Profit</p>
                                        <h2>Rp3.000</h2>
                                    </div>
                                    <a href="#" class="text-green">+Rp3.000 (+100%)</a>
                                </div>
                            </div>
                        </div>
                        <h3 class="card-title">
                            @*<i class="fas fa-th mr-1"></i>*@
                            Gross Sales
                        </h3>
                        @*<div class="card-tools">
                    <button type="button" class="btn bg-info btn-sm" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn bg-info btn-sm" data-card-widget="remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>*@
                    </div>
                    <div class="card-body col-12" style="display: block;">
                        <div class="chartjs-size-monitor"><div class="chartjs-size-monitor-expand"><div class=""></div></div><div class="chartjs-size-monitor-shrink"><div class=""></div></div></div>
                        <canvas class="chart chartjs-render-monitor" id="line-chart" style="min-height: 320px; max-height: 250px; max-width: 100%; display: block;" width="580" height="312"></canvas>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header border-0 ui-sortable-handle">
                        <h3 class="card-title">
                            EXPORT
                        </h3>
                        <img src="~/Content/icons/Icon_columns.png" style="float: right;" width="28" height="28" />
                    </div>
                    <div class="card-body">
                        <div class="dt-responsive table-responsive">
                            <table id="table_export" class="table table-hover wrap">
                                <thead>
                                    <tr>
                                        <th style="vertical-align:middle;">Date</th>
                                        <th style="vertical-align:middle;">Gross Sales</th>
                                        <th style="vertical-align:middle;">Refunds</th>
                                        <th style="vertical-align:middle;">Discounts</th>
                                        <th style="vertical-align:middle;">Net Sales</th>
                                        <th style="vertical-align:middle;">Cost of goods</th>
                                        <th style="vertical-align:middle;">Gross profit</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>

@section Scripts
{
    <script src="~/Lib/Dashboard.js"></script>
}
