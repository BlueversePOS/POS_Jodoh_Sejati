
@{
    ViewBag.Title = "Employee List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Employee List</title>
    <style>
        .breadcrumb-item + .nav-item::before {
            content: ">";
        }
    </style>
</head>
<body>
    <section class="content">
        <div class="card container-fluid" style="background: none; box-shadow: none !important;">
            <div class="card-body">
                <div class="card listEmployees col-lg-8 col-md-12 col-12">
                    <div class="card-header border-0">
                        <div class="row">
                            <div class="col-12">
                                <div class="col-12">
                                    <button type="button" class="btn btn-primary col-lg-4 col-md-6 col-12" id="btnAddEmployee"> + ADD EMPLOYEE</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="dt-responsive table-responsive">
                            <table id="table_employees" class="table table-hover wrap">
                                <thead>
                                    <tr>
                                        <th class="text-center" style="vertical-align:middle; width: 1px;"><input type="checkbox" id="cbAll" /></th>
                                        <th class="text-left" style="vertical-align: middle; width: 30%;">Name</th>
                                        <th class="text-left" style="vertical-align: middle; width: 30%;">Email</th>
                                        <th class="text-left" style="vertical-align: middle; width: 25%;">Phone</th>
                                        <th class="text-left" style="vertical-align: middle;">Role</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="addEmployees col-lg-6 col-md-12 col-12">
                    <div class="card">
                        <div class="card-body pt-0">
                            <div class="col-12" style="text-align: -webkit-center;">
                                <div class="pt-2">
                                    <i class="fas fa-user-circle fa-4x text-blue"></i>
                                </div>
                            </div>
                            @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "FormEmployee" }))//data-resetUrl
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <input type="hidden" id="Employee_ID" value="" />
                                <div class="form-group" style="margin: 1rem 0 1rem 0;">
                                    <label class="form-label" for="EMPLOYEE_NAME">Name</label>
                                    <input type="text" class="form-input" id="EMPLOYEE_NAME" />
                                </div>
                                <div class="row col-12 p-0" style="margin: 1rem 0 1rem 0;">
                                    <i class="fas fa-envelope text-gray col-lg-1 col-md-1 col-2 p-0" style="align-self: center;"></i>
                                    <div class="form-group m-0 col-lg-11 col-md-10 col-10 p-0">
                                        <label class="form-label" for="EMPLOYEE_EMAIL">Email</label>
                                        <input type="email" class="form-input" id="EMPLOYEE_EMAIL" />
                                    </div>
                                </div>
                                <div class="form-group col-12 p-0 row" style="margin: 1rem 0 1rem 0;">
                                    <i class="fas fa-phone text-gray col-lg-1 col-md-1 col-2 p-0" style="align-self: center;"></i>
                                    <div class="form-group m-0 col-lg-11 col-md-10 col-10 p-0">
                                        <label class="form-label" for="EMPLOYEE_PHONE">Phone</label>
                                        <input type="tel" class="form-input" id="EMPLOYEE_PHONE" />
                                    </div>
                                </div>
                                <div class="form-group col-12 p-0 row" style="margin: 1rem 0 1rem 0;">
                                    <i class="fas fa-users text-gray col-lg-1 col-md-1 col-2 p-0" style="align-self: center;"></i>
                                    <div class="form-group m-0 col-lg-11 col-md-10 col-10 p-0">
                                        <label class="form-label" for="EMPLOYEE_ROLE">Role</label>
                                        <select class="form-input" id="EMPLOYEE_ROLE"></select>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <div class="col-12 p-0" style="border-top: 1px solid lightgray;">
                        <div class="col-12 p-0 row ml-0 mr-0 mt-3" style="justify-content: right;">
                            <button type="button" class="btn btn-default mr-2" id="btnCancel" style="width: 120px;">Cancel</button>
                            <button type="button" class="btn btn-primary" id="btnSave" style="width: 120px;">Save</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>

@section Scripts
{
    <script src="~/Areas/Employees/Lib/Employees.js"></script>
}
