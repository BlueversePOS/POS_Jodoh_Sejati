                                                    <tr>
                                                        <th class="text-left" style="vertical-align: middle;">Site ID</th>
                                                        <th class="text-left" style="vertical-align: middle;">Name</th>
                                                        <th class="text-left" style="vertical-align: middle;">Store</th>
                                                    </tr>
                                                </thead>
                                                <tbody></tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 siteAdd">
                                    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "FormSite" }))//data-resetUrl
