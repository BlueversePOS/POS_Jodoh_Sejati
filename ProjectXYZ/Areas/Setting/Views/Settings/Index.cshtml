                                        <div class="form-group mt-0">
                                            <label class="form-label" for="SITE_NAME">Name</label>
                                            <input type="text" class="form-input" id="SITE_NAME" />
                                        </div>
                                        <div class="form-group mt-0">
                                            <label class="form-label" for="STORE_ID">Store ID</label>
                                            <select class="form-input" id="STORE_ID"></select>
                                        </div>
